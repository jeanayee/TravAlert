<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="group2.travalert.SettingsActivity"
    tools:showIn="@layout/activity_settings">

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:id="@+id/notificationImg"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="20dp"
        android:src="@drawable/alarm_black_24dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:id="@+id/reminderImg"
        android:layout_below="@+id/notificationImg"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="20dp"
        android:src="@drawable/notifications_black_24dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:id="@+id/messageImg"
        android:layout_below="@+id/reminderImg"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="20dp"
        android:src="@drawable/email_black_24dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:id="@+id/contactsImg"
        android:layout_below="@+id/messageImg"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="20dp"
        android:src="@drawable/contacts_black_24dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:gravity="center_horizontal"
        android:layout_alignParentTop="true"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="25dp"
        android:layout_toRightOf="@+id/notificationImg"
        android:layout_toEndOf="@+id/notificationImg"
        android:orientation="vertical"
        android:weightSum="1.0">
        <Button
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_width="fill_parent"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="18dp"
            android:gravity="center_vertical|left"
            android:text="Alert Notification Time"
            android:textAllCaps="false"
            android:id="@+id/notificationButton"
            android:background="@android:color/transparent"
            style="@style/Widget.AppCompat.Button.Borderless"
            />

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="#c0c0c0"
            android:layout_marginTop="10dp"
            android:id="@+id/line" />

        <Button
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_width="fill_parent"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="18dp"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical|left"
            android:text="Notification Sound"
            android:textAllCaps="false"
            android:id="@+id/reminderButton"
            android:background="@android:color/transparent"
            style="@style/Widget.AppCompat.Button.Borderless"
            />

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="#c0c0c0"
            android:layout_marginTop="10dp"
            android:id="@+id/line2" />
        <Button
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_width="fill_parent"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="18dp"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical|left"
            android:text="Alert Message"
            android:textAllCaps="false"
            android:id="@+id/messageButton"
            android:background="@android:color/transparent"
            style="@style/Widget.AppCompat.Button.Borderless"
            />

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="#c0c0c0"
            android:layout_marginTop="10dp"
            android:id="@+id/line3" />


        <Button
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_width="fill_parent"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="18dp"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical|left"
            android:text="Emergency Contacts"
            android:textAllCaps="false"
            android:id="@+id/contactsButton"
            android:background="@android:color/transparent"
            style="@style/Widget.AppCompat.Button.Borderless"
            />
    </LinearLayout>

    <!--style="@style/Widget.AppCompat.Button.Borderless"-->

</RelativeLayout>
